<?xml version="1.0"?>
<ruleset name="Software Archetypes PHP Coding Standard">
    <description>PHP_CodeSniffer configuration for Software Archetypes PHP Examples</description>

    <!-- Use PSR-12 as the base standard (includes PSR-1) -->
    <rule ref="PSR12"/>

    <!-- Include additional PSR standards -->
    <rule ref="PSR1"/>

    <!-- Show colors in output -->
    <arg name="colors"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Ignore vendor directories if present in context -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>

    <!-- Additional PSR-12 specific rules -->
    <rule ref="PSR12.Files.FileHeader"/>
    <rule ref="PSR12.Files.ImportStatement"/>
    <rule ref="PSR12.Functions.NullableTypeDeclaration"/>
    <rule ref="PSR12.Traits.UseDeclaration"/>
    <rule ref="PSR12.Properties.ConstantVisibility"/>
    <rule ref="PSR12.Classes.ClassInstantiation"/>
    <rule ref="PSR12.Keywords.ShortFormTypeKeywords"/>
    <rule ref="PSR12.Operators.OperatorSpacing"/>
    <rule ref="PSR12.ControlStructures.BooleanOperatorPlacement"/>
    <rule ref="PSR12.ControlStructures.ControlStructureSpacing"/>

    <!-- Ensure no errors are reported as warnings -->
    <config name="ignore_warnings_on_exit" value="0"/>
    <config name="ignore_errors_on_exit" value="0"/>
</ruleset>
