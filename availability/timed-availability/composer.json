{
    "name": "software-archetypes/timed-availability",
    "description": "Timed Availability pattern implementation in PHP - Port from Software Archetypes Java project",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "ddd",
        "domain-driven-design",
        "availability",
        "timed-availability",
        "software-archetypes",
        "aggregate",
        "event-sourcing",
        "booking",
        "reservation"
    ],
    "authors": [
        {
            "name": "Software Archetypes PHP",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "deptrac/deptrac": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "SoftwareArchetypes\\Availability\\TimedAvailability\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoftwareArchetypes\\Availability\\TimedAvailability\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit --no-coverage --do-not-fail-on-phpunit-deprecation",
        "test:unit": "phpunit --testsuite=unit --no-coverage --do-not-fail-on-phpunit-deprecation",
        "test:integration": "phpunit --testsuite=integration --no-coverage --do-not-fail-on-phpunit-deprecation",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=max",
        "deptrac": "deptrac analyse --config-file=deptrac.yaml",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "ci": [
            "@phpstan",
            "@deptrac",
            "@test:unit",
            "@test:integration"
        ]
    }
}
